#include <iostream>

using namespace std;

void piramidaBintang(int n){
    cout << endl;
}
int main()
{
    int n, s, i, j;
    cout << "Piramida Bintang " << endl;
    cout << "Masukkan jumlah baris: ";
    cin >> n;
    for (i = 1; i <= n; i++)
    {
        for (s = i; s < n; s++)
            cout << " ";
        for (j = 1; j <= i; j++)
            cout << "* ";
        cout<< "\n";
    }
    return 0;
}
